<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.recipeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/res1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Recipe.com"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddActivity"
            android:label="ADD RECIPE"
            android:noHistory="true"/>
        <activity
            android:name=".ScrollingActivity"
            android:label="RECIPE"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.user.recipeapp.Home" />
        </activity>
        <activity
            android:name=".Home"
            android:label="RECIPE LIST"
            />
        <activity android:name=".UpdateRecipe"
            android:label="UPDATE RECIPE"
            android:noHistory="true"
           >
        </activity>
    </application>

</manifest>