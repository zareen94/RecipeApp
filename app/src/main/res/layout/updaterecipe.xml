<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite_1000">


    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_add_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Recipe Name"
                android:textSize="18sp"
                android:textColor="@color/colorWhite_1000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <EditText
                android:layout_marginTop="4dp"
                android:hint="recipe name"
                android:id="@+id/recipename"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_layout"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="@android:color/black"/>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_add_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Recipe Types"
                android:textSize="18sp"
                android:textColor="@color/colorWhite_1000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Spinner
                android:backgroundTint="@color/colorWhite_1000"
                android:textColor="@color/colorWhite_1000"
                android:entries="@array/recipeTypes"
                android:id="@+id/recipetype"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                ></Spinner>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="@android:color/black"/>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_add_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Ingredient"
                android:textSize="18sp"


                android:textColor="@color/colorWhite_1000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <EditText
                android:layout_marginTop="4dp"
                android:hint="12 New Items"
                android:inputType="textMultiLine"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/recipeingredient"
                android:background="@drawable/rounded_layout"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_add_color"

        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step Cooking"
                android:textColor="@color/colorWhite_1000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/recipestep"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_layout"
                android:hint="12 New Items"
                android:inputType="textMultiLine" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.app.infideap.stylishwidget.view.AButton
            android:id="@+id/updatebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Update Recipe"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>


</LinearLayout>